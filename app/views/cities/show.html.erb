<%= content_for(:title) do %>
  <%= t(".title", city: @city[:name]) %>
<% end %>

<%= content_for(:description) do %>
  <%= t(".description", city: @city[:name]) %>
<% end %>

<div class="banner-container">
  <div class="container">
    <div class="banner banner-top banner-gradient text-center" style="background-image: url('<%= image_path(@city[:images][:banner])%>');">
      <div class="banner-gradient-shadow"></div>
      <div class="banner-content">
        <h1><%= t ".become_dev" %></h1>
        <p><%= t ".city_arrival", city: @city[:name] %></p>

      </div>
    </div>
    <div class='banner-cta'>
      <%= link_to t(".apply_for_nine_weeks"), apply_path, class: "btn banner-cta-item btn-danger btn-lg", style:  'margin-left: 0' %>
    </div>
  </div>
</div>

<div class="features-wrapper">
  <div class="container features-container">
    <h2 class='section-title-home'>
      <div class='section-title-home-content' style="font-size:30px;">
        <%= t(".pedagogy_matters_html") %>
      </div>
    </h2>
    <p class="text-muted text-center section-title-home-subtitle">
      <%= t(".pedagogy_tagline") %>
    </p>
    <div class='features'>
      <div class='feature'>
        <div class='feature-header'>
          <div class='feature-icon yellow'>
            <i class='mdi mdi-laptop'>

            </i>
          </div>
          <div class='feature-title'>
            <%= t(".web_development") %>
          </div>
        </div>
        <div class='feature-body'>
          <%= t(".web_development_details") %>
        </div>
      </div>
      <div class='feature'>
        <div class='feature-header'>
          <div class='feature-icon purple'>
            <i class='mdi mdi-keyboard-variant'></i>
          </div>
          <div class='feature-title'>
            <%= t(".software_engineer_html") %>
          </div>
        </div>
        <div class='feature-body'>
          <%= t(".software_engineer_details") %>
        </div>
      </div>
      <div class='feature'>
        <div class='feature-header'>
          <div class='feature-icon green'>
          <i class='mdi mdi-source-pull'></i>
          </div>
          <div class='feature-title'>
            <%= t(".technical_workflow") %>
          </div>
        </div>
        <div class='feature-body'>
          <%= t(".technical_workflow_details_html") %>
        </div>
      </div>
       <div class='feature'>
        <div class='feature-header'>
          <div class='feature-icon orange'>
            <i class='mdi mdi-auto-fix'></i>
          </div>
          <div class='feature-title'>
            <%= t(".startup_toolkit") %>
          </div>
        </div>
        <div class='feature-body'>
          <%= t(".startup_toolkit_details") %>
        </div>
      </div>
      <div class='feature'>
        <div class='feature-header'>
          <div class='feature-icon blue'>
            <i class='mdi mdi-cube-outline'></i>
          </div>
          <div class='feature-title'>
            <%= t(".build_product") %>
          </div>
        </div>
        <div class='feature-body'>
          <%= t(".build_product_details") %>
        </div>
      </div>
      <div class='feature'>
        <div class='feature-header'>
          <div class='feature-icon red'>
            <i class='mdi mdi-wallet-travel'></i>
          </div>
          <div class='feature-title'>
            <%= t(".land_a_job") %>
          </div>
        </div>
        <div class='feature-body'>
          <%= t(".land_a_job_details") %>
        </div>
      </div>
    </div>
  </div>
</div>


<div id="staff" class="padded">
  <div class="container">
    <h2 class="section-title-home text-center">
      <div class="section-title-home-content" style="font-size:30px;">
        <%= t ".staff", city: @city[:name]%>
      </div>
    </h2>
  </div>
  <div class="container">
    <div>
      <% @city[:staff].each do |teacher| %>
      <div class="row">
        <div class="col-xs-12">

          <div class="card-staff">
            <div class="card-staff-description">
              <h3><%= teacher.split("_").first.capitalize %></h3>
              <%= markdown(locale == I18n.default_locale ? Static::STAFF[teacher.to_sym][:description][:fr] : Static::STAFF[teacher.to_sym][:description][:en])%>
            </div>
            <div class="card-staff-infos">
              <div class="card-staff-role">
                <h4><%= Static::STAFF[teacher.to_sym][:name]%></h4>
                <p><%= Static::STAFF[teacher.to_sym][:role] %></p>
              </div>
              <%= image_tag "teachers/#{Static::STAFF[teacher.to_sym][:image_name]}", class: "img-circle card-staff-img" %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<div class="location-overlay">
  <div class="container">
    <div id="location" class="banner banner-flat" style="background-image: url('<%= image_path(@city[:images][:bottom])%>');">
      <div class="banner-flat-filter banner-flat-filter-black"></div>
      <div class="banner-content text-center">
        <% if @city[:location]%>
          <h2><%= @city[:location] %></h2>
        <% end %>
        <p><%= @city[:address] %></p>
        <br>
        <button class="btn-transparent">Next meetup: Apero talk avec Boris Paillard</button>
      </div>
    </div>
  </div>
</div>
