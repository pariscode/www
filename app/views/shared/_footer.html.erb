<div id="footer">

  <div class="container">
    <div class='brand-footer'>
      <%= render "shared/logos/logo_red_square", width: "100px" %>
    </div>

    <div class="flex">
      <div class='footer-section'>
        <h3>
          <%= t(".our_videos")%>
        </h3>

        <div class='footer-section-links'>
          <div>
            <a href="https://www.youtube.com/channel/UChCDYcBCrb8tuPAO6e0P-Hw" target="_blank">TV</a>
          </div>
          <div>
            <a href="https://ondemand.lewagon.org/" target='_blank'>On-Demand</a>
          </div>
        </div>
      </div>
      <div class='footer-section'>
        <h3>
          <%= t(".find_a_city")%>
        </h3>

        <div class='footer-section-links'>
          <% Static::CITIES.each do |slug, infos| %>
            <div>
              <%= link_to infos[:name], city_path(city: slug, locale: locale) %>
            </div>
          <% end %>
        </div>
      </div>

      <div class='footer-section'>
        <h3>
          <%= t(".about_us")%>
        </h3>

        <div class='footer-section-links'>
          <div>
            <a href="#">Blog</a>
          </div>
          <div>
            <a href="#">Jobs</a>
          </div>
          <div>
            <a href="#">Press</a>
          </div>
        </div>
      </div>

      <div class='footer-section'>
        <h3>
          <%= t(".follow_us")%>
        </h3>

        <div class='footer-section-links'>
          <div>
            <a href="https://www.facebook.com/lewagonformation" target="_blank">Facebook</a>
          </div>
          <div>
            <a href="https://twitter.com/lewagonparis" target="_blank">Twitter</a>
          </div>
          <div>
            <a href="https://www.youtube.com/channel/UChCDYcBCrb8tuPAO6e0P-Hw" target="_blank">Youtube</a>
          </div>
          <div>
            <a href="https://github.com/lewagon" target="_blank">Github</a>
          </div>
          <div>
            <a href="https://medium.com/le-wagon" target="_blank">Medium</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

