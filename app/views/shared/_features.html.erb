<div class="features-wrapper">
  <div class="container features-container">
    <h2 class='section-title-home'>
      <div class='section-title-home-content' style="font-size:30px;">
        <%= t(".pedagogy_matters_html") %>
      </div>
    </h2>
    <p class="text-muted text-center section-title-home-subtitle">
      <%= t(".pedagogy_tagline") %>
    </p>
    <div class='features'>
      <div class='feature'>
        <div class='feature-header'>
          <div class='feature-icon yellow'>
            <i class='mdi mdi-laptop'>

            </i>
          </div>
          <div class='feature-title'>
            <%= t(".web_development") %>
          </div>
        </div>
        <div class='feature-body'>
          <%= t(".web_development_details") %><%= link_to t(".see_all"), send(:"program_#{locale}_path") %>
