<%= content_for(:title) do %>
  <%= t(".title") %>
<% end %>

<%= content_for(:description) do %>
  <%= t(".description") %>
<% end %>


<div class="banner banner-top banner-gradient text-center" style="background-image: url('<%= image_path('banners/live-code.jpg')%>');">
  <div class="banner-gradient-shadow"></div>
  <div class="banner-content">
    <h1><%= t(".our_program") %></h1>
    <p>
      <%= t(".program_details") %>
    </p>
    <%= link_to t(".apply_for_nine_weeks"), apply_path, class: "btn btn-danger btn-lg" %>
  </div>
</div>

<div class="bg-white">
  <div class="container padded">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <h2 class="section-header-big">
          <%= t(".objective") %>
        </h2>
        <p class="text-readable">
          <%= t(".objective_details") %>
        </p>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= image_tag "banners/live-code.jpg", class: "img-responsive" %>
      </div>
    </div>
  </div>
</div>

<div class="bg-purple-gradient two-columns">
  <%= image_tag "product/fullstack-challenges.png", class: "two-columns-img two-columns-img-left"%>
  <div class="two-columns-description">
    <h2 class="section-header-big">
      <%= t(".why_us") %>
    </h2>
    <p class="text-readable">
      <%= t(".why_us_details") %>
    </p>
  </div>
</div>

<div class="bg-white two-columns">
  <div class="two-columns-description" >
    <h2 class="section-header-big">
      <%= t(".community") %>
    </h2>
    <p class="text-readable">
      <%= t(".community_details") %>
    </p>
  </div>
  <%= image_tag "product/slack.png", class: "two-columns-img two-columns-img-right", style: "height:600px;" %>
</div>

<div class="bg-green-gradient two-columns">
  <%= image_tag "product/github-portfolio.png", class: "two-columns-img two-columns-img-padded-left", style: "height:250px;margin-bottom:70px" %>
  <div class="two-columns-description">
    <h2 class="section-header-big">
      <%= t(".cv") %>
    </h2>
    <p class="text-readable">
      <%= t(".cv_details") %>
    </p>
  </div>
</div>

<div class="bg-white padded">
  <div class="container">
    <div class="col-xs-12 col-sm-6">
      <p class="text-muted text-readable padded-small text-center">
        TODO: tchret animation "our only goal"
      </p>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="padded-small">
        <h2 class="section-header">
          <%= t(".awesome_entrepreneur") %>
        </h2>
        <p class="text-readable">
          <%= t(".awesome_entrepreneur_details") %>
        </p>
      </div>
      <div class="padded-small">
        <h2 class="section-header">
          <%= t(".amazing_employee") %>
        </h2>
        <p class="text-readable">
          <%= t(".amazing_employee_details") %>
        </p>
      </div>
      <div class="padded-small">
        <h2 class="section-header">
          <%= t(".junior_dev") %>
        </h2>
        <p class="text-readable">
          <%= t(".junior_dev_details") %>
        </p>
      </div>
    </div>
  </div>
</div>
<div class="container padded text-center">
  <div class="row">
    <div class="col-xs-12">
      <h2 class="section-header-big"><%= t ".week_by_week" %></h2>
      TODO: tchret learning curve
    </div>
  </div>
</div>
<div class="container padded">
  <div class="row">
    <h2 class="section-header-big text-center"><%= t ".typical_day" %></h2>
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <div class="days">
        <div class="days-border"></div>
        <div class="days-container">
          <div class="day">
            <div class="day-hour">9h</div>
            <div class="day-circle day-circle-red"></div>
            <div class="day-description">
              <p>
                <%= t ".theoretical_intro" %>
              </p>
            </div>
          </div>
          <div class="day-picture" style="background-image: url('<%= image_path('banners/live-code.jpg')%>');">
          </div>
          <div class="day">
            <div class="day-hour">10h30</div>
            <div class="day-circle day-circle day-circle-blue"></div>
            <div class="day-description">
              <p>
                <%= t ".pair_programming" %>
              </p>
            </div>
          </div>
          <div class="day-picture" style="background-image: url('<%= image_path('product/kitt.png')%>');background-position: top;">
          </div>
          <div class="day">
            <div class="day-hour">14h00</div>
            <div class="day-circle day-circle-green"></div>
            <div class="day-description">
              <p>
                <%= t ".pair_programming_next" %>
              </p>
            </div>
          </div>
          <div class="day-picture" style="background-image: url('<%= image_path('banners/pair-programming.jpg')%>;');background-position: center;">
          </div>
          <div class="day">
            <div class="day-hour">16h30</div>
            <div class="day-circle day-circle-orange"></div>
            <div class="day-description">
              <p>
                <%= t ".yoga" %>
              </p>
            </div>
          </div>
          <div class="day-picture" style="background-image: url('<%= image_path('banners/yoga.jpg')%>;');background-position: center;">
          </div>
          <div class="day">
            <div class="day-hour">17h30</div>
            <div class="day-circle day-circle-orange"></div>
            <div class="day-description">
              <p>
                <%= t ".live_code" %>
              </p>
            </div>
          </div>
          <div class="day-picture" style="background-image: url('<%= image_path('banners/home-secondary.jpg')%>;');background-position: top;">
          </div>
          <div class="day">
            <div class="day-hour">19h00</div>
            <div class="day-circle day-circle-yellow"></div>
            <div class="day-description">
              <p>
                <%= t ".talk" %>
              </p>
            </div>
          </div>
          <div class="day-picture" style="background-image: url('<%= image_path('banners/talk.jpeg')%>;');background-position: top;">
          </div>
          <div class="day">
            <div class="day-hour"></div>
            <div class="day-circle day-circle-red"></div>
            <div class="day-description">
              <p>
                <i>Sleep, repeat.</i>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
